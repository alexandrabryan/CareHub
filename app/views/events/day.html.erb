<p id="notice"><%= notice %></p>

<h1>Calendar</h1>

<%= link_to("Week", "/events/week") %>
<%= link_to("Month", events_path) %>
<br>
<%= link_to 'Create New Event', new_event_path %>

<h2> Day View </h2>

<%= calendar number_of_days: 1, events: @events do |date, events| %>
  <%= date.day %>

  <% events.each do |event| %>
    <div>
      <%= link_to "#{event.start_time.strftime("%l:%M %P")} - #{event.name}", event %>
    </div>
  <% end %>
<% end %>
